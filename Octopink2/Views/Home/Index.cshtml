                            <img src="@artist.Foto3" alt="" class="artist-tattoo" />
                            <img src="@artist.Foto4" alt="" class="artist-tattoo th-img" />
                            <img src="@artist.Foto5" alt="" class="artist-tattoo" />
                        </div>
                        <div class="artist-description">
                            <p>
                                @artist.Descrizione
                            </p>
                        </div>
                    </div>
                }
                isLeftPosition = !isLeftPosition; // Cambia la posizione
                <hr class="separator" />
            }

