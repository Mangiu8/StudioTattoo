                    <img src="~/Content/img/studio2.jpeg" alt="Foto dello studio" class="studio-image" />
                </div>
            </div>
            <h3 class="text-center mt-2">Il nostro merchandise</h3>
            <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @foreach (var product in Model.Products)
                    {
                        <div class="carousel-item @(product == Model.Products.First() ? "active" : "")">
                            <a href="@Url.Action("Index", "Prodotti")">
                                <img src="@product.Foto1" class="d-block w-100" alt="Prodotti">
                            </a>
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <div class="about-studio mt-2 mb-2">
                <h2 class="text-center text-light mt-2 mb-2">Resident Artist</h2>
            </div>
            @{
                bool isLeftPosition = true; // Flag per tenere traccia della posizione corrente
            }
            @foreach (var artist in Model.Artists)
            {
                if (isLeftPosition)
